{% if app.request.hasPreviousSession %}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div
                    class="
                        alert
                        alert-{{ type }}
                        alert-dismissible
                    "
                    role="alert"
            >
                <button
                        type="button"
                        class="close"
                        data-dismiss="alert"
                        aria-label="Close"
                >
                    <span
                            aria-hidden="true"
                    >
                        &times;
                    </span>
                </button>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}
