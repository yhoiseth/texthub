{% extends 'FOSUserBundle::layout.html.twig' %}

{% block body %}
    <div
            class="row"
    >
        <div
                class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3"
        >
            {{ form_start(searchForm, {
                'attr': {
                    'id': 'js-search-form'
                }
            }) }}
            {{ form_widget(searchForm) }}
