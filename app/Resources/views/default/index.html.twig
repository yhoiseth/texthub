{% extends 'FOSUserBundle::layout.html.twig' %}

{% block body %}
    {% for text in texts %}
        <div
                class="panel panel-default"
        >
            <div
                    class="panel-heading"
            >
                <h3
                        class="panel-title"
                >
                    {{ text.title }}
                </h3>
            </div>
            <div
                    class="panel-body"
            >
                    <img
                            src="{{ gravatar(
                            text.createdBy.emailCanonical,
                            20,
                            'g',
                            'mm',
                            true
                            ) }}"
                            class="img-circle"
                    >
                    &nbsp;
                    {{ text.createdBy.name }}
            </div>
        </div>
    {% endfor %}
{% endblock %}
